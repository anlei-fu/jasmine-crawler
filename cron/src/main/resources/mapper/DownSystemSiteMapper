<mapper namespace="com.jasmine.crawler.cron.mapper.DownSystemSiteMapper">
    <update id="increaseTaskRunningCountById">
        update down_system_site
        set current_running_task_count = current_running_task_count +1
        where id =#{id}
    </update>
    <select id="getNeedCreateNewTaskSite" resultType="com.jasmine.crawler.cron.pojo.entity.DownSystemSite">
        select
        dss.id,
        dss.site_id
        from down_system_site dss
        join site s on dss.site_id = s.id
        join down_system ds on ds.id =dss.down_system_id
        where
        dss.enable_status=1
        and ds.enable_status=1
        and s.enable_status=1
        and
        (
        select count(1)
        from crawl_task ct
        where
        ct.down_site_id = dss.id
        and ct .bind_status=0
        ) &lt; dss.max_wait_to_run_task_count
        order by dss.priority*ds.priority

    </select>
    <select id="getById" resultType="com.jasmine.crawler.cron.pojo.entity.DownSystemSite">
        select
        *
        from down_system_site
        where id = #{id}
    </select>
