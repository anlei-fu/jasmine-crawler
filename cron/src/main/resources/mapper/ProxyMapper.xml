<mapper namespace="com.jasmine.crawler.cron.mapper.ProxyMapper">
    <update id="increaseCurrentUseCountById">
        update proxy
        set current_use_count =current_use_count+1
        where id = #{id}
    </update>
    <update id="decreaseCurrentUseCountById">
        update proxy
        set current_use_count =current_use_count-1
        where id = #{id}
    </update>
    <update id="disableProxiesBatch"></update>
    <update id="enableProxiesBatch"></update>

    <select id="getProxyBySiteId" resultType="com.jasmine.crawl.common.pojo.entity.Proxy">
        select
        *
        from proxy p
        where
        p.enable_status=1
        and p.is_valid=1
        and  (p.current_use_count&lt;p.max_use_count)
        and  not exists (select 1 from site_ip_block_map  m where m.site_id=1 and m.ip = p.ip )
        order by (p.current_use_count/p.max_use_count) asc
        limit 1,1
    </select>
    <select id="getById" resultType="com.jasmine.crawl.common.pojo.entity.Proxy">
        select * from  proxy where id = #{id}
    </select>
    <select id="getExpiredProxies" resultType="com.jasmine.crawl.common.pojo.entity.Proxy"></select>
    <select id="getDisableTimeoutProxies" resultType="com.jasmine.crawl.common.pojo.entity.Proxy"></select>
</mapper>
